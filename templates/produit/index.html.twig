{% extends 'base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
    Total de votre panier :{{total}}€ 
	<h1 class="text-center my-3">Liste des produits</h1>

	<div class="row">

		{% for product in products %}

			<div class="col-md-4">
				<div class="card mb-3" style="width: 18rem;">
					<h3 class="card-header">{{ product.title }}</h3>
					<img src="{{ produit.photo }}" alt="Image du produit">
					<div class="card-body">
						<p class="card-text text-end fw-bold">{{ produit.prix|number_format(2) }}€</p>
					</div>
					<div class="card-body text-end">
                    <a href="{{path("cart_add",{id:produit.id})}}" class="card-link btn btn-primary">Ajouter au panier</a>
                  </div>
				</div>
			</div>

		{% endfor %}

	</div>

{% endblock %}
