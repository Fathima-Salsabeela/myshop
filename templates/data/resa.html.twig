{% extends "base.html.twig" %}

{% block body %}

	<h1 class="text-center">la produit sélectionné</h1>

	<div class="col-md-6">
		<div class="card mb-3" style="width: 18rem;">
			<h3 class="card-header">{{ titre }}</h3>
			<img src="{{ photo }}" alt="Image">
			<div class="card-body">
				<p class="card-text">{{ description }}</p>
				<p class="card-text text-end fw-bold">{{ prix}}€</p>
			</div>
		</div>
	</div>

	{% if app.user %}

		{{ form_start(form) }}

		{{ form_row(form.dateenregistrement) }}
		

		<button type="submit" class="btn btn-primary">acheter</button>

		{{ form_end(form) }}
	{% else %}
		<a href="{{ path('app_login') }}">Veuillez vous connecter</a>
		pour réserver un véhicule.
	{% endif %}


{% endblock %}