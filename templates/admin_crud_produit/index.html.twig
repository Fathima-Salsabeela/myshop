{% extends 'base.html.twig' %}

{% block title %}Admin Produit
{% endblock %}

{% block body %}

	<h1 class="text-center">Gestion des Produit</h1>

	<a href="{{ path('admin_crud_produit_new') }}" class="btn btn-success my-3">Ajouter un produit</a>

	<table class="table table-bordered text-center">
		<thead>
			<tr>
				{% for data in colonnes %}
					{% if data != "id" %}
						<th>{{ data }}</th>
					{% endif %}
				{% endfor %}
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for data in produit %}
				<tr>
					<td>{{ data.titre }}</td>
                    <td>{{ data.description }}</td>
                    <td>{{ data.couleur }}</td>
                    <td>{{ data.taille }}</td>
                    <td>{{ data.collection }}</td>
                    <td><img src="{{ data.photo }}" alt="Photo" style="width: 150px;"></td>
					<td>{{ data.prix }}€</td>
					<td>{{ data.stock }}</td>
				    <td>{{ data.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
					<td>
						<a href="{{ path('admin_crud_produit_edit', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-edit fa-lg"></i>
						</a>

						<a onclick="return confirm('Voulez-vous supprimer  ?')" href="{{ path('admin_crud_produit_delete', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-trash-alt fa-lg"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>

{% endblock %}
