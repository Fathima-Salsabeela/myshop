{% extends 'base.html.twig' %}

{% block title %}Admin Membres
{% endblock %}

{% block body %}

	<h1 class="text-center">Gestion des Membres</h1>

	<a href="{{ path('admin_crud_membre_new') }}" class="btn btn-success my-3">Créer un nouvel utilisateur</a>

	<table class="table table-bordered text-center">
		<thead>
			<tr>
            <th>pseudo</th>
            <th>nom</th>
            <th>prenom</th>
            <th>email</th>
            <th>civilite</th>
            <th>Statut</th>
            <th>dateEnregistrement</th>
		    <th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for data in membre %}
				<tr>
					<td>{{ data.pseudo }}</td>
					<td>{{ data.nom }}</td>
					<td>{{ data.prenom }}</td>
					<td>{{ data.email }}</td>
					<td>{{ data.civilite }}</td>
                    <td>{{ data.statut }}</td>
					<td>{{ data.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
					<td>
						<a href="{{ path('admin_crud_membre_edit', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-edit fa-lg"></i>
						</a>

						<a onclick="return confirm('Voulez-vous supprimer ce membre ?')" href="{{ path('admin_crud_membre_delete', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-trash-alt fa-lg"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>

{% endblock %}
