{% extends 'base.html.twig' %}

{% block title %}Admin commandes{% endblock %}

{% block body %}

<h1 class="text-center">Gestion des commandes</h1>

	
	<table class="table table-bordered text-center">
		<thead>
			<tr>
                <th>Membre</th>
                <th>Produit</th>
                <th>Quantite</th>
                <th>Montant</th>
                <th>Etat</th>
                <th>Date et heure d'enregistrement</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			{% for data in commande %}
				<tr>
					<td>{{ data.membre.id}} / {{ data.membre.email}}</td>
					<td>{{ data.produit.id}}</td>
                    <td>{{ data.quantite}}</td>
					<td>{{ data.montant}}€</td>
                    <td>{{ data.etat}}</td>
					<td>{{ data.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
					<td>
						<a href="{{ path('admin_crud_commande_edit', {id:data.id}) }}" class="text-dark">
							<i class="fas fa-edit fa-lg"></i>
						</a>

						<a onclick="return confirm('Voulez-vous supprimer cette commande ?')" href="{{ path('admin_crud_commande_delete', {id:data.id}) }}" class="text-dark">
							<i class="fas fa-trash-alt fa-lg"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>

{% endblock %}
